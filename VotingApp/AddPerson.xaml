<Page x:Class="VotingApp.AddPerson"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VotingApp"
      mc:Ignorable="d" 
      WindowHeight="200"
      WindowWidth="500"
      d:DesignHeight="200" d:DesignWidth="500"
      Title="AddPerson" 
      >

    <Grid Background="White" >
        <TextBox x:Name="FirstNameBox" Background="LightGray" Width="200px" Height="30px" TextChanged="TextBox_TextChanged"></TextBox>
        <TextBox x:Name="LastNameBox" Background="LightGray" Width="200px" Height="30px" TextChanged="TextBox_TextChanged_1" Margin="150,120,150,50"></TextBox>
        <Button Content="Add" Background="#4CBB17" Click="Add" Width="100px" Height="30px" Margin="200,160,200,10"/>
    </Grid>
</Page>
