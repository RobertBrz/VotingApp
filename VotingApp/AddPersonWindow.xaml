<Window x:Class="VotingApp.AddPersonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VotingApp"
        mc:Ignorable="d"
        Title="" ResizeMode="NoResize" Height="150" Width="500">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <TextBox x:Name="NameTextBox" VerticalContentAlignment="Center"  Background="#E8E8E8" Width="200px" Height="30px" TextChanged="RemoveNoAlphabetSigns"   ></TextBox>
        </Grid>
        <Grid Grid.Row="1">
            <Button Content="Add" Background="#4CBB17" Click="Add" Width="100px" Height="30px"  />
        </Grid>
    </Grid>
</Window>
